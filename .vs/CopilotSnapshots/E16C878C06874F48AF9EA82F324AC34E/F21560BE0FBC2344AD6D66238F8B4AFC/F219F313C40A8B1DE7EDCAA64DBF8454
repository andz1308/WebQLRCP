<!-- Top Movies -->
<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-trophy"></i> Top 5 Phim Có Doanh Thu Cao Nhất</h2>
    </div>
    
    @if (ViewBag.TopMovies != null && ViewBag.TopMovies.Count > 0)
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên Phim</th>
                    <th>Số Vé Bán</th>
                    <th>Doanh Thu</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                    foreach (var item in ViewBag.TopMovies)
                    {
                        var phim = Model.Phims.FirstOrDefault(p => p.phim_id == item.PhimId);
                        <tr>
                            <td><strong>@index</strong></td>
                            <td>@(phim != null ? phim.ten_phim : "N/A")</td>
                            <td>@item.SoVe vé</td>
                            <td><strong style="color: #27ae60;">@item.TongDoanhThu.ToString("N0") đ</strong></td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align: center; color: #999; padding: 2rem;">Chưa có dữ liệu thống kê.</p>
    }
</div>

