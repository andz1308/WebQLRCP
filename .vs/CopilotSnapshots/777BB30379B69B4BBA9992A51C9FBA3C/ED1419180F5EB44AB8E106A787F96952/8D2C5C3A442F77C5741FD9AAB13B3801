@model WebCinema.Models.Phim

@{
    ViewBag.Title = "Chỉnh Sửa Phim";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-edit"></i> Chỉnh Sửa Phim: @Model.ten_phim</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @using (Html.BeginForm("Edit", "MovieManagement", new { id = Model.phim_id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div>
                <div class="form-group">
                    <label class="form-label">Tên Phim *</label>
                    @Html.TextBoxFor(m => m.ten_phim, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    <label class="form-label">Đạo Diễn</label>
                    @Html.DropDownList("dao_dien_id", (SelectList)ViewBag.DaoDiens, "-- Chọn đạo diễn --", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="form-label">Nhà Sản Xuất</label>
                    @Html.DropDownList("nha_san_xuat_id", (SelectList)ViewBag.NhaSanXuats, "-- Chọn nhà sản xuất --", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="form-label">Thời Lượng (phút)</label>
                    @Html.TextBoxFor(m => m.thoi_luong, new { @class = "form-control", type = "number" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ngày Khởi Chiếu</label>
                    @Html.TextBoxFor(m => m.ngay_khoi_chieu, new { @class = "form-control", type = "date", Value = Model.ngay_khoi_chieu.HasValue ? Model.ngay_khoi_chieu.Value.ToString("yyyy-MM-dd") : "" })
                </div>

                @if (!string.IsNullOrEmpty(Model.hinh_anh))
                {
                    <div class="form-group">
                        <label class="form-label">Poster Hiện Tại</label>
                        <div>
                            <img src="@Url.Content(Model.hinh_anh)" alt="@Model.ten_phim" style="max-width: 200px; border-radius: 8px;" />
                        </div>
                    </div>
                }
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Mô Tả</label>
                    @Html.TextAreaFor(m => m.mo_ta, new { @class = "form-control", rows = 5 })
                </div>

                <div class="form-group">
                    <label class="form-label">Thể Loại</label>
                    <div style="max-height: 200px; overflow-y: auto; border: 2px solid #e0e0e0; border-radius: 8px; padding: 1rem;">
                        @{
                            var selectedGenres = (int[])ViewBag.SelectedGenres;
                        }
                        @foreach (var genre in (List<WebCinema.Models.Loai_Phim>)ViewBag.LoaiPhims)
                        {
                            var isChecked = selectedGenres != null && selectedGenres.Contains(genre.loaiphim_id);
                            <div style="margin-bottom: 0.5rem;">
                                <input type="checkbox" name="selectedGenres" value="@genre.loaiphim_id" id="genre_@genre.loaiphim_id" @(isChecked ? "checked" : "") />
                                <label for="genre_@genre.loaiphim_id" style="margin-left: 0.5rem; cursor: pointer;">@genre.ten_loai</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Đổi Poster/Hình ảnh</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>

                <div class="form-group">
                    <label class="form-label">Link Trailer YouTube</label>
                    @Html.TextBox("video", Model.video, new { @class = "form-control", placeholder = "https://youtube.com/watch?v=..." })
                    <small style="color: #999;">Hoặc upload video mới:</small>
                    <input type="file" name="videoFile" class="form-control" accept="video/*" style="margin-top: 0.5rem;" />
                </div>
            </div>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
            <button type="submit" class="btn btn-primary" style="padding: 1rem 2rem;">
                <i class="fas fa-save"></i> Cập Nhật Phim
            </button>
        </div>
    }
</div>


