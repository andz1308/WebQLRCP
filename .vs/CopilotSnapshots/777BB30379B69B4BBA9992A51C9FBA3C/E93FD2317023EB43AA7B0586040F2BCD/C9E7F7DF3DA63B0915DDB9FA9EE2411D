        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "auth-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert-error" })

            <div class="form-group">
                <label class="form-label">Họ và tên</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-input", placeholder = "Nguyễn Văn A" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "error-message" })
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "example@email.com", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
            </div>

            <div class="form-group">
                <label class="form-label">Số điện thoại</label>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-input", placeholder = "0912345678" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "error-message" })
            </div>

            <div class="form-group">
                <label class="form-label">Mật khẩu</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "••••••••", id = "password" })
                <div class="password-strength">
                    <div class="password-strength-bar" id="strengthBar"></div>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
            </div>

            <div class="form-group">
                <label class="form-label">Xác nhận mật khẩu</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input", placeholder = "••••••••" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error-message" })
            </div>

            <div class="terms-text">
                Bằng việc đăng ký, bạn đồng ý với <a href="#">Điều khoản sử dụng</a> và <a href="#">Chính sách bảo mật</a> của DAV Cinema
            </div>

            <button type="submit" class="btn-submit">Đăng Ký Ngay</button>
