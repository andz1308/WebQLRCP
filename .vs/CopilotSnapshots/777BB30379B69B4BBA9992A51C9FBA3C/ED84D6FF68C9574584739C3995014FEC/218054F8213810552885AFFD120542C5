<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Đăng Nhập</h1>
            <p class="auth-subtitle">Chào mừng quay trở lại DAV Cinema</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert-error">
                @ViewBag.ErrorMessage
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "auth-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert-error" })

            <div class="form-group">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "example@email.com", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
            </div>

            <div class="form-group">
                <label class="form-label">Mật khẩu</label>
                <div style="position: relative;">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "••••••••", id = "password" })
                    <button type="button" id="togglePassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: #666;">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
            </div>

            <div class="form-checkbox-group">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-checkbox" })
                <label class="form-checkbox-label" for="RememberMe">Ghi nhớ đăng nhập</label>
            </div>

            <div class="forgot-password">
                <a href="#">Quên mật khẩu</a>
            </div>

            <button type="submit" class="btn-submit">Đăng nhập</button>
        }

        <div class="auth-divider">
            <span class="divider-text">Hoặc đăng nhập với</span>
        </div>

        <div class="social-login">
            <button class="social-btn" onclick="alert('Tính năng đang phát triển')">
                <i class="fab fa-facebook-f" style="color: #1877f2; margin-right: 8px;"></i> Facebook
            </button>
            <button class="social-btn" onclick="alert('Tính năng đang phát triển')">
                <i class="fab fa-google" style="color: #db4437; margin-right: 8px;"></i> Google
            </button>
        </div>

        <div class="auth-footer">
            Chưa có tài khoản <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordField = document.getElementById('password');
            var icon = this.querySelector('i');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    </script>
}


