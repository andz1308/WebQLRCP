    @using (Html.BeginForm("Edit", "ProducerManagement", new { id = Model.nha_san_xuat_id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div>
                <div class="form-group">
                    <label class="form-label">Tên Nhà Sản Xuất *</label>
                    @Html.TextBoxFor(m => m.ten_nha_san_xuat, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.ten_nha_san_xuat, "", new { @class = "error-message" })
                </div>

                <div class="form-group">
                    <label class="form-label">Quốc Gia</label>
                    @Html.TextBoxFor(m => m.quoc_gia, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.quoc_gia, "", new { @class = "error-message" })
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Mô Tả</label>
                    @Html.TextAreaFor(m => m.mo_ta, new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(m => m.mo_ta, "", new { @class = "error-message" })
                </div>

                @if (!string.IsNullOrEmpty(Model.logo))
                {
                    <div class="form-group">
                        <label class="form-label">Logo Hiện Tại</label>
                        <div>
                            <img src="@Url.Content(Model.logo)" alt="@Model.ten_nha_san_xuat" style="max-width: 200px; border-radius: 8px;" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label class="form-label">Đổi Logo</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Hoặc nhập URL:</small>
                    <input type="text" name="imageUrl" class="form-control" placeholder="https://example.com/logo.jpg" value="@Model.logo" />
                </div>
            </div>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
            <button type="submit" class="btn btn-success" style="padding: 1rem 2rem;">
                <i class="fas fa-save"></i> Lưu Thay Đổi
            </button>
        </div>
    }
</div>

