@section scripts {
    <script>
        function deleteUser(id, name) {
            if (confirmDelete('B?n có ch?c ch?n mu?n xóa ng??i dùng "' + name + '"?')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Có l?i x?y ra.');
                    }
                });
            }
        }
    </script>
}

