                <div class="form-group">
                    <label class="form-label">Poster/Hình ảnh</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Hoặc nhập URL:</small>
                    <input type="text" name="imageUrl" class="form-control" style="margin-top: 0.5rem;" placeholder="https://example.com/poster.jpg" />
                </div>

                <div class="form-group">
                    <label class="form-label">Trailer (Video)</label>
                    <input type="file" name="videoFile" class="form-control" accept="video/*" />
                    <small class="form-text text-muted">Hoặc nhập link YouTube:</small>
                    <input type="text" name="videoUrl" class="form-control" style="margin-top: 0.5rem;" placeholder="https://youtube.com/watch?v=..." />
                </div>
            </div>
        </div>

        <!-- Cast Section -->
        <div style="margin-top: 2rem; padding: 2rem; background: #f8f9fa; border-radius: 12px;">
            <h3 style="margin-bottom: 1.5rem; color: #2c3e50;">
                <i class="fas fa-users"></i> Diễn Viên Tham Gia
            </h3>
            <div id="castContainer">
                <div class="cast-row" style="display: grid; grid-template-columns: 2fr 1fr auto; gap: 1rem; margin-bottom: 1rem; align-items: end;">
                    <div class="form-group" style="margin: 0;">
                        <label class="form-label">Diễn viên</label>
                        <div style="display: flex; gap: 0.5rem;">
                            <select name="selectedActors" class="form-control">
                                <option value="">-- Chọn diễn viên --</option>
                                @foreach (var actor in (SelectList)ViewBag.Actors)
                                {
                                    <option value="@actor.Value">@actor.Text</option>
                                }
                            </select>
                            <a href="@Url.Action("Create", "ActorManagement")" class="btn btn-link" style="font-size: 0.8rem; padding: 0.5rem; align-self: flex-end;">Thêm</a>
                        </div>
                    </div>
                    <div class="form-group" style="margin: 0;">
                        <label class="form-label">Vai diễn</label>
                        <input type="text" name="actorRoles" class="form-control" placeholder="Vai chính, vai phụ..." />
                    </div>
                    <button type="button" onclick="removeCastRow(this)" class="btn btn-danger" style="padding: 0.75rem 1rem;">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <button type="button" onclick="addCastRow()" class="btn btn-secondary" style="margin-top: 1rem;">
                <i class="fas fa-plus"></i> Thêm Diễn Viên
            </button>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
