}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-plus"></i> Thêm Phim Mới</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @using (Html.BeginForm("Create", "MovieManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div>
                <div class="form-group">
                    <label class="form-label">Tên Phim *</label>
                    @Html.TextBoxFor(m => m.ten_phim, new { @class = "form-control", placeholder = "Nhập tên phim", required = "required" })
                    @Html.ValidationMessageFor(m => m.ten_phim, "", new { @class = "error-message" })
                </div>

                <div class="form-group">
                    <label class="form-label">Đạo Diễn</label>
                    <div style="display: flex; gap: 0.5rem;">
                        @Html.DropDownList("dao_dien_id", (SelectList)ViewBag.DaoDiens, "-- Chọn đạo diễn --", new { @class = "form-control" })
                        <a href="@Url.Action("Create", "DirectorManagement")" class="btn btn-secondary" style="font-size: 0.8rem; padding: 0.5rem;">Thêm mới</a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Nhà Sản Xuất</label>
                    <div style="display: flex; gap: 0.5rem;">
                        @Html.DropDownList("nha_san_xuat_id", (SelectList)ViewBag.NhaSanXuats, "-- Chọn nhà sản xuất --", new { @class = "form-control" })
                        <a href="@Url.Action("Create", "ProducerManagement")" class="btn btn-secondary" style="font-size: 0.8rem; padding: 0.5rem;">Thêm mới</a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Thời Lượng (phút)</label>
                    @Html.TextBoxFor(m => m.thoi_luong, new { @class = "form-control", type = "number", placeholder = "120" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ngày Khởi Chiếu</label>
                    @Html.TextBoxFor(m => m.ngay_khoi_chieu, new { @class = "form-control", type = "date" })
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Mô Tả</label>
                    @Html.TextAreaFor(m => m.mo_ta, new { @class = "form-control", rows = 3, placeholder = "Mô tả về phim..." })
                </div>

                <div class="form-group">
                    <label class="form-label">Thể Loại</label>
                    <div style="max-height: 150px; overflow-y: auto; border: 2px solid #e0e0e0; border-radius: 8px; padding: 1rem;">
                        @foreach (var genre in (List<WebCinema.Models.Loai_Phim>)ViewBag.LoaiPhims)
                        {
                            <div style="margin-bottom: 0.5rem;">
                                <input type="checkbox" name="selectedGenres" value="@genre.loaiphim_id" id="genre_@genre.loaiphim_id" />
                                <label for="genre_@genre.loaiphim_id" style="margin-left: 0.5rem; cursor: pointer;">@genre.ten_loai</label>
