</div>

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script>
        function addCastRow() {
            var container = document.getElementById('castContainer');
            var firstRow = container.querySelector('.cast-row');
            var newRow = firstRow.cloneNode(true);
            
            // Clear values
            newRow.querySelector('select').selectedIndex = 0;
            newRow.querySelector('input[type="text"]').value = '';
            
            container.appendChild(newRow);
        }

        function removeCastRow(btn) {
            var container = document.getElementById('castContainer');
            if (container.querySelectorAll('.cast-row').length > 1) {
                btn.closest('.cast-row').remove();
            } else {
                alert('Phải có ít nhất một dòng diễn viên!');
            }
        }
    </script>
}


