@model WebCinema.Models.Suat_Chieu

@{
    ViewBag.Title = "Thêm Suất Chiếu";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-plus"></i> Thêm Suất Chiếu</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @using (Html.BeginForm("Create", "ShowtimeManagement", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div>
                <div class="form-group">
                    <label class="form-label">Phim *</label>
                    @Html.DropDownList("phim_id", (SelectList)ViewBag.Movies, "-- Chọn phim --", new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    <label class="form-label">Rạp *</label>
                    @Html.DropDownList("cinemaId", (SelectList)ViewBag.Cinemas, "-- Chọn rạp --", new { @class = "form-control", required = "required", id = "cinemaSelect" })
                </div>

                <div class="form-group">
                    <label class="form-label">Phòng Chiếu *</label>
                    <select name="phong_chieu_id" id="roomSelect" class="form-control" required>
                        <option value="">-- Chọn rạp trước --</option>
                    </select>
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Ngày Chiếu *</label>
                    @Html.TextBox("ngay_chieu", "", new { @class = "form-control", type = "date", required = "required" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ca Chiếu *</label>
                    @Html.DropDownList("ca_chieu_id", (SelectList)ViewBag.Shifts, "-- Chọn ca chiếu --", new { @class = "form-control", required = "required" })
                </div>
            </div>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
            <button type="submit" class="btn btn-primary" style="padding: 1rem 2rem;">
                <i class="fas fa-save"></i> Lưu Suất Chiếu
            </button>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#cinemaSelect').change(function () {
                var cinemaId = $(this).val();
                if (cinemaId) {
                    $.ajax({
                        url: '@Url.Action("GetRoomsByCinema")',
                        type: 'GET',
                        data: { cinemaId: cinemaId },
                        success: function (response) {
                            if (response.success) {
                                var roomSelect = $('#roomSelect');
                                roomSelect.empty();
                                roomSelect.append('<option value="">-- Chọn phòng chiếu --</option>');
                                $.each(response.rooms, function (index, room) {
                                    roomSelect.append('<option value="' + room.value + '">' + room.text + '</option>');
                                });
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert('Có lỗi xảy ra khi tới danh sách phòng.');
                        }
                    });
                } else {
                    $('#roomSelect').empty().append('<option value="">-- Chọn rạp trước --</option>');
                }
            });

            // Set minimum date to today
            var today = new Date().toISOString().split('T')[0];
            $('input[name="ngay_chieu"]').attr('min', today);
        });
    </script>
}
