@model WebCinema.Models.Dien_Vien

@{
    ViewBag.Title = "Chỉnh Sửa Diễn Viên";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-edit"></i> Ch?nh S?a Di?n Viên</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @using (Html.BeginForm("Edit", "ActorManagement", new { id = Model.dienvien_id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div>
                <div class="form-group">
                    <label class="form-label">Tên Diễn Viên *</label>
                    @Html.TextBoxFor(m => m.ho_ten, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ngày Sinh</label>
                    @Html.TextBoxFor(m => m.ngay_sinh, Model.ngay_sinh.HasValue ? Model.ngay_sinh.Value.ToString("yyyy-MM-dd") : "", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    <label class="form-label">Quốc Tịch</label>
                    @Html.TextBoxFor(m => m.quoc_tich, new { @class = "form-control" })
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Hình Ảnh Hiện Tại</label>
                    @if (!string.IsNullOrEmpty(Model.hinh_anh))
                    {
                        var imgSrc = Model.hinh_anh.StartsWith("http") ? Model.hinh_anh : 
                                    Model.hinh_anh.StartsWith("~") ? Url.Content(Model.hinh_anh) : 
                                    Url.Content("~/Content/images/actors/" + Model.hinh_anh);
                        <div style="margin-bottom: 1rem;">
                            <img src="@imgSrc" alt="@Model.ho_ten" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%; box-shadow: 0 4px 15px rgba(0,0,0,0.1);" />
                        </div>
                    }
                    <label class="form-label">Thay Đổi Hình Ảnh</label>
                    <input type="file" name="imageFile" accept="image/*" class="form-control" />
                    <small style="color: #999; display: block; margin-top: 0.5rem;">Hoặc nhập link ảnh mới:</small>
                    <input type="text" name="imageUrl" class="form-control" placeholder="https://example.com/image.jpg" style="margin-top: 0.5rem;" />
                    <small style="color: #999;">Để trống nếu không muốn thay đổi</small>
                </div>

                <div class="form-group">
                    <label class="form-label">Tiểu Sử</label>
                    @Html.TextAreaFor(m => m.tieu_su, new { @class = "form-control", rows = "6" })
                </div>
            </div>
        </div>

        <div style="margin-top: 2rem; text-align: right;">
            <button type="submit" class="btn btn-primary" style="padding: 1rem 2rem;">
                <i class="fas fa-save"></i> Cập Nhật
            </button>
        </div>
    }
</div>
