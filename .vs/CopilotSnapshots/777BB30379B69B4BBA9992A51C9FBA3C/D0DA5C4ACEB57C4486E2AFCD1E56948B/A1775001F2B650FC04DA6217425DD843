                </div>

                <div class="form-group">
                    <label class="form-label">Quốc Gia</label>
                    @Html.TextBoxFor(m => m.quoc_gia, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label class="form-label">Logo Hiện Tại</label>
                    @if (!string.IsNullOrEmpty(Model.logo))
                    {
                        var imgSrc = Model.logo.StartsWith("http") ? Model.logo : 
                                    Model.logo.StartsWith("~") ? Url.Content(Model.logo) : 
                                    Url.Content("~/Content/images/producers/" + Model.logo);
                        <div style="margin-bottom: 1rem; padding: 1rem; background: #f8f9fa; border-radius: 8px;">
                            <img src="@imgSrc" alt="@Model.ten_nha_san_xuat" style="max-width: 200px; max-height: 100px; object-fit: contain;" />
                        </div>
                    }
                    <label class="form-label">Thay Đổi Logo</label>
                    <input type="file" name="imageFile" accept="image/*" class="form-control" />
                    <small style="color: #999; display: block; margin-top: 0.5rem;">Hoặc nhập link logo mới:</small>
                    <input type="text" name="imageUrl" class="form-control" placeholder="https://example.com/logo.png" style="margin-top: 0.5rem;" />
                    <small style="color: #999;">Để trống nếu không muốn thay đổi</small>
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Mô Tả</label>
                    @Html.TextAreaFor(m => m.mo_ta, new { @class = "form-control", rows = "10" })
