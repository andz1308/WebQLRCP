@model WebCinema.Models.Phong_Chieu

@{
    ViewBag.Title = "Tạo Phòng Chiếu Mới";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";

    // Lấy trạng thái từ ViewBag
    bool hasSpecificRap = ViewBag.HasSpecificRap ?? false;
}

<h2>Tạo Phòng Chiếu Mới</h2>
<hr />

@using (Html.BeginForm("Create", "Auditori", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if(hasSpecificRap)
    {
        <div class="form-group">
            <label class="control-label col-md-2">Thuộc Rạp</label>
            <div class="col-md-10">
                <p class="form-control-static">
                    <strong>@ViewBag.RapName</strong>
                </p>
                @Html.HiddenFor(model => model.rap_id)
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.rap_id, "Chọn rạp", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("rap_id", (SelectList)ViewBag.RapList, "--- Chọn rạp ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.rap_id, "", new { @class = "text-danger" })
            </div>
        </div>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.ten_phong, "Tên phòng", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ten_phong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_phong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.so_hang, "Số hàng", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.so_hang, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "26" } })
            @Html.ValidationMessageFor(model => model.so_hang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.so_cot, "Số cột", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.so_cot, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "30" } })
            @Html.ValidationMessageFor(model => model.so_cot, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo và tiếp tục" class="btn btn-primary" />
            @Html.ActionLink("Quay lại", "Index", new { rapId = Model.rap_id }, new { @class = "btn btn-default" })
        </div>
    </div>
}