@model WebCinema.Models.Suat_Chieu

@{
    ViewBag.Title = "Thêm Suất Chiếu";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-plus"></i> Thêm Suất Chiếu</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @using (Html.BeginForm("Create", "ShowtimeManagement", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">

            <div>
                <div class="form-group">
                    <label class="form-label">Phim *</label>
                    @Html.DropDownList("phim_id", (SelectList)ViewBag.Movies, "-- Chọn phim --",
                        new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.phim_id, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="form-label">Rạp *</label>
                    @Html.DropDownList("cinemaId", (SelectList)ViewBag.Cinemas, "-- Chọn rạp --",
                        new { @class = "form-control", required = "required", id = "cinemaSelect" })
                </div>

                <div class="form-group">
                    <label class="form-label">Phòng Chiếu *</label>
                    @Html.DropDownList("phong_chieu_id",
                        (SelectList)ViewBag.Rooms ?? new SelectList(Enumerable.Empty<SelectListItem>()),
                        "-- Chọn rạp trước --",
                        new { @class = "form-control", id = "roomSelect", required = "required" })
                    @Html.ValidationMessageFor(model => model.phong_chieu_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="form-label">Ngày Chiếu *</label>
                    @Html.TextBoxFor(model => model.ngay_chieu,
                        new { @class = "form-control", type = "date", required = "required", id = "ngay_chieu" })
                    @Html.ValidationMessageFor(model => model.ngay_chieu, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ca Chiếu *</label>
                    @Html.DropDownList("ca_chieu_id", (SelectList)ViewBag.Shifts,
                        "-- Chọn ca chiếu --", new { @class = "form-control", required = "required" })

                    <a href="@Url.Action("Create", "ShiftManagement")" class="btn btn-sm btn-secondary mt-2">
                        <i class="fas fa-plus"></i> Thêm ca chiếu mới
                    </a>

                    @Html.ValidationMessageFor(model => model.ca_chieu_id, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="form-label">Giá Vé Gốc *</label>
                    @Html.TextBoxFor(model => model.gia_ve,
                        new
                             {
                                 @class = "form-control",
                                 type = "number",
                                 min = "0",
                              required = "required",
                                 placeholder = "Ví dụ: 80000"
                             })
                    @Html.ValidationMessageFor(model => model.gia_ve, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="form-label">Ngôn Ngữ</label>
                    @Html.TextBoxFor(model => model.ngon_ngu,
                        new { @class = "form-control", placeholder = "Ví dụ: Vietsub, Thuyết minh" })
                    @Html.ValidationMessageFor(model => model.ngon_ngu, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="text-end" style="margin-top: 2rem;">
            <button type="submit" class="btn btn-primary px-4 py-2">
                <i class="fas fa-save"></i> Lưu Suất Chiếu
            </button>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {

            // Load lại danh sách room khi Validationsummary lỗi
            var cinemaSelect = $("#cinemaSelect");
            if (cinemaSelect.val()) {
                cinemaSelect.trigger("change");
            }

            $("#cinemaSelect").change(function () {
                var cinemaId = $(this).val();

                if (cinemaId) {
                    $.ajax({
                        url: '@Url.Action("GetRoomsByCinema")',
                        type: 'GET',
                        data: { cinemaId: cinemaId },
                        success: function (response) {
                            var roomSelect = $("#roomSelect");
                            roomSelect.empty();

                            if (response.success) {
                                roomSelect.append('<option value="">-- Chọn phòng chiếu --</option>');
                                $.each(response.rooms, function (index, room) {
                                    roomSelect.append('<option value="' + room.value + '">' + room.text + '</option>');
                                });
                            } else {
                                roomSelect.append('<option value="">Không có phòng chiếu</option>');
                            }
                        }
                    });
                } else {
                    $("#roomSelect").empty().append('<option value="">-- Chọn rạp trước --</option>');
                }
            });

            // Giới hạn ngày chiếu từ hôm nay
            var today = new Date().toISOString().split("T")[0];
            $("#ngay_chieu").attr("min", today);
        });
    </script>
}
