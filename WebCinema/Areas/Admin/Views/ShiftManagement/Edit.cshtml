@model WebCinema.Models.Ca_Chieu

@{
    ViewBag.Title = "Chỉnh Sửa Ca Chiếu";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title"><i class="fas fa-edit"></i> Chỉnh Sửa Ca Chiếu</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @using (Html.BeginForm("Edit", "ShiftManagement", new { id = Model.ca_chieu_id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })

        <div style="max-width: 600px; margin: 0 auto;">
            <div class="form-group">
                <label class="form-label">Giờ Bắt Đầu *</label>
                <input type="time" name="gio_bat_dau" class="form-control" value="@Model.gio_bat_dau.ToString(@"hh\:mm")" required />
            </div>

            <div class="form-group">
                <label class="form-label">Giờ Kết Thúc *</label>
                <input type="time" name="gio_ket_thuc" class="form-control" value="@Model.gio_ket_thuc.ToString(@"hh\:mm")" required />
            </div>

            <div style="margin-top: 2rem; text-align: right;">
                <button type="submit" class="btn btn-success" style="padding: 1rem 2rem;">
                    <i class="fas fa-save"></i> Cập Nhật
                </button>
            </div>
        </div>
    }
</div>